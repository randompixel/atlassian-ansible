# selenium-host - Host Server for Selenium Grid
#
# Selenium is a UI Automation Testing Tool
# Required-Start:       
# Required-Stop:        

description "Selenium UI Automation Testing"

start on runlevel [2345]
stop on runlevel [!2345]

# Give up if restart occurs 10 times in 30 seconds.
respawn limit 10 30

chdir {{ selenium_home_dir }}/bin/

exec sudo -u selenium /usr/bin/java -jar selenium-server-standalone-{{ selenium_remote_version_full }}.jar -role hub
respawn